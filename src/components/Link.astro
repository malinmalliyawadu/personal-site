---
interface Props {
  text: string;
  href: string;
}

const { href, text } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="flex flex-col items-center transform transition-all hover:scale-150 hover:text-amber-500 hover:bg-amber-200 hover:bg-opacity-10 px-3 -mx-3 py-2 -my-2 rounded-lg"
>
  <slot name="icon" />
  {text}
</a>
